SHELL := /usr/bin/env -S bash -e -o pipefail
.DEFAULT_TARGET = run

####################################################################################################

V ?= ~/opt/vlang/v

####################################################################################################

root.dir := $(dir $(abspath $(lastword $(MAKEFILE_LIST))))
src.dir := $(root.dir)src

####################################################################################################

.PHONY : bmakelib/bmakelib.mk
include  bmakelib/bmakelib.mk

####################################################################################################

.PHONY : run

run :
	@$(V) run $(src.dir)
